    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.11",
    "@types/passport": "^1.0.16",
