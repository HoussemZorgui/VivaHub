  "author": "LifeHub Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "apollo-server-express": "^3.13.0",
    "graphql": "^16.8.1",
    "socket.io": "^4.6.1",
    "mongoose": "^8.1.1",
    "sequelize": "^6.37.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "redis": "^4.6.13",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-google-oauth20": "^2.0.0",
    "passport-facebook": "^3.0.0",
    "joi": "^17.12.2",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
